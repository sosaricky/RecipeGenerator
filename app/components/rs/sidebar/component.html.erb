<div data-controller="<%= controller %>">
  <div class="relative z-50 lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-neutral-900/80 opacity-0 hidden" data-action="click-><%= controller %>#toggle" data-<%= controller %>-target="backdrop"></div>
    <div class="fixed flex" data-<%= controller %>-target="backpage">
      <div class="relative mr-16 flex w-full max-w-xs flex-1 -translate-x-full" data-<%= controller %>-target="sidebar">
        <div class="absolute left-full top-0 flex flex-col w-16 justify-center pt-5 ml-2">
          <button type="button" data-action="click-><%= controller %>#toggle" data-<%= controller %>-target="hamburger" class="-m-2.5 p-2.5 text-gray-700 lg:hidden">
            <span class="sr-only"><%= t("components.rs.sidebar.open") %></span>
            <%= inline_svg_tag('icons/hamburger.svg', class: "h-6 w-6") %>
          </button>
          <button data-action="click-><%= controller %>#toggle" data-<%= controller %>-target="cross" class="-m-2.5 p-2.5 opacity-0 hidden">
            <span class="sr-only"><%= t("components.rs.sidebar.close") %></span>
            <%= inline_svg_tag('icons/close.svg', class: "h-6 w-6 text-white") %>
          </button>
        </div>
        <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-primary-600 px-6 pb-4 hidden" data-<%= controller %>-target="items">
          <div class="flex h-16 shrink-0 items-center w-10">
            <%= render RS::Logo::Component.new(src: 'icons/mark_light.svg', alt: t("components.rs.sidebar.logo.alt")) %>
          </div>
          <nav class="flex flex-1 flex-col">
            <% sections.each do |section| %>
              <%= render section %>
            <% end %>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex" data-<%= controller %>-target="overlay">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-primary-600 px-4 pb-4">
      <div class="flex h-16 shrink-0 items-center w-10">
        <%= render RS::Logo::Component.new(src: 'icons/mark_light.svg', alt: t("components.rs.sidebar.logo.alt")) %>
      </div>
      <nav class="flex flex-1 flex-col">
        <% sections.each do |section| %>
          <%= render section %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
